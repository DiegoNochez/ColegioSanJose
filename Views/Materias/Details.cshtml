@model ColegioSanJose.Models.Materia

@{
    ViewData["Title"] = "Detalles de la Materia";
}

<div class="page-title">
    <i class="bi bi-journal-text"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <h4 class="mb-3 text-primary">Información de la materia</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Nombre de la Materia</dt>
        <dd class="col-sm-9 fw-semibold">@Model.NombreMateria</dd>

        <dt class="col-sm-3">Docente</dt>
        <dd class="col-sm-9">@Model.Docente</dd>

        <dt class="col-sm-3">Descripción</dt>
      
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MateriaId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Volver a la lista
        </a>
    </div>
</div>
