@model IEnumerable<ColegioSanJose.Models.Materia>
@{
    ViewData["Title"] = "Materias";
}

<div class="page-title">
    <i class="bi bi-journal-text"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="actions-bar mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nueva Materia
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Nombre de la Materia</th>
                <th>Docente</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.NombreMateria</td>
                    <td>@m.Docente</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@m.MateriaId"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@m.MateriaId"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@m.MateriaId"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
