@model ColegioSanJose.Models.Materia
@{
    ViewData["Title"] = "Editar Materia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <i class="bi bi-journal-gear"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="MateriaId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="row g-3">
            <div class="col-md-6 form-floating">
                <input asp-for="NombreMateria" class="form-control" placeholder="Nombre de la materia" />
                <label asp-for="NombreMateria"></label>
                <span asp-validation-for="NombreMateria" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-floating">
                <input asp-for="Docente" class="form-control" placeholder="Nombre del docente" />
                <label asp-for="Docente"></label>
                <span asp-validation-for="Docente" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check2-circle me-1"></i> Guardar cambios
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-short me-1"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
