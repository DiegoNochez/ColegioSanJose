@model ColegioSanJose.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<div class="page-title">
    <i class="bi bi-person-x-fill"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <h4 class="mb-3 text-danger">¿Estás seguro que deseas eliminar este alumno?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Nombre completo</dt>
        <dd class="col-sm-9 fw-semibold">@($"{Model.Nombre} {Model.Apellido}")</dd>

        <dt class="col-sm-3">Grado</dt>
        <dd class="col-sm-9">@Model.Grado</dd>

        <dt class="col-sm-3">Fecha de nacimiento</dt>
        <dd class="col-sm-9">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AlumnoId" />
        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>
