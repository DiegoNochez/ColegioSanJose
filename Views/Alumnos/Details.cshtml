@model ColegioSanJose.Models.Alumno

@{
    ViewData["Title"] = "Detalles del Alumno";
}

<div class="page-title">
    <i class="bi bi-person-vcard"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <h4 class="mb-3 text-primary">Información del alumno</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Nombre completo</dt>
        <dd class="col-sm-9 fw-semibold">@($"{Model.Nombre} {Model.Apellido}")</dd>

        <dt class="col-sm-3">Grado</dt>
        <dd class="col-sm-9">@Model.Grado</dd>

        <dt class="col-sm-3">Fecha de nacimiento</dt>
        <dd class="col-sm-9">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.AlumnoId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Volver a la lista
        </a>
    </div>
</div>
