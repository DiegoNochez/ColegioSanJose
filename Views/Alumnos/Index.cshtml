@model IEnumerable<ColegioSanJose.Models.Alumno>
@{
    ViewData["Title"] = "Alumnos";
}

<div class="page-title">
    <i class="bi bi-people-fill"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="actions-bar mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Alumno
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Grado</th>
                <th>Fecha Nac.</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Nombre</td>
                    <td>@a.Apellido</td>
                    <td>@a.Grado</td>
                    <td>@a.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@a.AlumnoId"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@a.AlumnoId"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@a.AlumnoId"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
