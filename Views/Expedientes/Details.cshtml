@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Detalles del Expediente";
}

<div class="page-title">
    <i class="bi bi-card-text"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <h4 class="mb-3 text-primary">Información del expediente</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Alumno</dt>
        <dd class="col-sm-9 fw-semibold">
            @($"{Model.Alumno?.Nombre} {Model.Alumno?.Apellido}")
        </dd>

        <dt class="col-sm-3">Materia</dt>
        <dd class="col-sm-9 fw-semibold">
            @Model.Materia?.NombreMateria
        </dd>

        <dt class="col-sm-3">Nota Final</dt>
        <dd class="col-sm-9">
            <span class="badge bg-primary fs-6 px-3 py-2">@Model.NotaFinal.ToString("0.00")</span>
        </dd>

        <dt class="col-sm-3">Observaciones</dt>
        <dd class="col-sm-9">@Model.Observaciones</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ExpedienteId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Volver a la lista
        </a>
    </div>
</div>
