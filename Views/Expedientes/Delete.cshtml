@model ColegioSanJose.Models.Expediente

@{
    ViewData["Title"] = "Eliminar Expediente";
}

<div class="page-title">
    <i class="bi bi-card-x"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="card p-4">
    <h4 class="mb-3 text-danger">¿Estás seguro que deseas eliminar este expediente?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Alumno</dt>
        <dd class="col-sm-9 fw-semibold">@($"{Model.Alumno?.Nombre} {Model.Alumno?.Apellido}")</dd>

        <dt class="col-sm-3">Materia</dt>
        <dd class="col-sm-9 fw-semibold">@Model.Materia?.NombreMateria</dd>

        <dt class="col-sm-3">Nota Final</dt>
        <dd class="col-sm-9">
            <span class="badge bg-primary fs-6 px-3 py-2">@Model.NotaFinal.ToString("0.00")</span>
        </dd>

        <dt class="col-sm-3">Observaciones</dt>
        <dd class="col-sm-9">@Model.Observaciones</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ExpedienteId" />
        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>
