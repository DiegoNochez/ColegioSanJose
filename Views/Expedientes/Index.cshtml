@model IEnumerable<ColegioSanJose.Models.Expediente>
@{
    ViewData["Title"] = "Expedientes";
}

<div class="page-title">
    <i class="bi bi-card-checklist"></i>
    <h2 class="m-0">@ViewData["Title"]</h2>
</div>

<div class="actions-bar mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nuevo Expediente
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Alumno</th>
                <th>Materia</th>
                <th>Nota Final</th>
                <th>Observaciones</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@($"{e.Alumno.Nombre} {e.Alumno.Apellido}")</td>
                    <td>@e.Materia.NombreMateria</td>
                    <td>@e.NotaFinal.ToString("0.00")</td>
                    <td>@e.Observaciones</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@e.ExpedienteId"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@e.ExpedienteId"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@e.ExpedienteId"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
