<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Colegio San José</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2"></i>Colegio San José
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-1"></i>Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Alumnos" asp-action="Index"><i class="bi bi-people me-1"></i>Alumnos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Materias" asp-action="Index"><i class="bi bi-journal-text me-1"></i>Materias</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Expedientes" asp-action="Index"><i class="bi bi-card-checklist me-1"></i>Expedientes</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reportes" asp-action="Promedios"><i class="bi bi-graph-up me-1"></i>Promedios</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer me-1"></i>Dashboard</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 mt-auto">
        <div class="container text-center text-muted small">
            © @DateTime.Now.Year · Colegio San José · ASP.NET Core + EF Core + MySQL
        </div>
    </footer>

    <!-- jQuery + Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
