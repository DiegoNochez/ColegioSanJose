@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5">
    <h1 class="fw-bold text-primary">
        <i class="bi bi-mortarboard-fill me-2"></i>Bienvenido al Sistema del Colegio San José
    </h1>
    <p class="text-muted fs-5">
        Administra alumnos, materias y expedientes de forma sencilla y visual.
    </p>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
            <div class="text-primary mb-3">
                <i class="bi bi-people-fill" style="font-size: 2.5rem;"></i>
            </div>
            <h4 class="fw-bold">Gestión de Alumnos</h4>
            <p class="text-muted">Consulta, agrega o modifica la información de los estudiantes registrados en el sistema.</p>
            <a asp-controller="Alumnos" asp-action="Index" class="btn btn-outline-primary mt-auto">
                <i class="bi bi-arrow-right-circle me-1"></i> Ir a Alumnos
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
            <div class="text-success mb-3">
                <i class="bi bi-journal-text" style="font-size: 2.5rem;"></i>
            </div>
            <h4 class="fw-bold">Gestión de Materias</h4>
            <p class="text-muted">Administra las materias disponibles y asigna docentes a cada una.</p>
            <a asp-controller="Materias" asp-action="Index" class="btn btn-outline-success mt-auto">
                <i class="bi bi-arrow-right-circle me-1"></i> Ir a Materias
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 text-center p-4">
            <div class="text-danger mb-3">
                <i class="bi bi-card-checklist" style="font-size: 2.5rem;"></i>
            </div>
            <h4 class="fw-bold">Gestión de Expedientes</h4>
            <p class="text-muted">Consulta y registra las notas y observaciones de los alumnos por materia.</p>
            <a asp-controller="Expedientes" asp-action="Index" class="btn btn-outline-danger mt-auto">
                <i class="bi bi-arrow-right-circle me-1"></i> Ir a Expedientes
            </a>
        </div>
    </div>
</div>

<hr class="my-5" />

<div class="row g-4">
    <div class="col-md-6">
        <div class="card h-100 border-0 shadow-sm text-center p-4">
            <div class="text-info mb-3">
                <i class="bi bi-graph-up" style="font-size: 2.5rem;"></i>
            </div>
            <h4 class="fw-bold">Reporte de Promedios</h4>
            <p class="text-muted">Consulta los promedios generales por alumno y filtra por grado.</p>
            <a asp-controller="Reportes" asp-action="Promedios" class="btn btn-outline-info mt-auto">
                <i class="bi bi-arrow-right-circle me-1"></i> Ver Reportes
            </a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100 border-0 shadow-sm text-center p-4">
            <div class="text-warning mb-3">
                <i class="bi bi-speedometer2" style="font-size: 2.5rem;"></i>
            </div>
            <h4 class="fw-bold">Dashboard General</h4>
            <p class="text-muted">Visualiza los indicadores globales del sistema con gráficos dinámicos.</p>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-warning mt-auto">
                <i class="bi bi-arrow-right-circle me-1"></i> Ir al Dashboard
            </a>
        </div>
    </div>
</div>
